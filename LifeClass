			numCol10 ++;
		}//ends if
		
		
//-------------------------------------prints numbers counted above

		
	}//ends countLiving method 
	
	public void print()
	{
		int count = 1;
		for(int x = 0; x < 19; x++)
		{
			for(int y = 0; y < 19; y++)
			{
				if(arrGrid[x][y] == 1)
				{
					System.out.print("*");
					count++;
					if(count == 20)
					{
						System.out.println();
						count = 1; 
					}//ends if
				}//ends if
				else
				{
					System.out.print(" ");
					count++;
					if(count == 20)
					{
						System.out.println();
						count = 1;
					}//ends 
				}//ends else
			}//ends for
		}//ends for loop
		
		
		System.out.println("Number in row 10 ---> " + numRow10);
		System.out.println("Number in column 10 ---> " + numCol10);
		System.out.println("Number of living organisms ---> " + numLiving);
	}//ends print method
}//ends Life class
